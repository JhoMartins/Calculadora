unit Calc;

interface

type TCalculadora = class
public
      function Adicao(x,y : integer):integer;
      function Subtracao (x,y : integer):integer;
end;

implementation


{ TCalc }

function TCalculadora.Adicao(x, y: integer): integer;
begin
   Result:= x + y;
end;

function TCalculadora.Subtracao(x, y: integer): integer;
begin
  Result:= x - y;
end;

end.
