unit Calc;

interface

type TCalculo = class
public
      function Adicao(x,y : integer):integer;
      function Subtracao (x,y : integer):integer;
end;

implementation


{ TCalc }

function TCalculo.Adicao(x, y: integer): integer;
begin
   Result:= x + y;
end;

function TCalculo.Subtracao(x, y: integer): integer;
begin
  Result:= x - y;
end;

end.
